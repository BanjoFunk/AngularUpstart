class Api::AerationsController < ApplicationController
  before_filter :determine_scope, :only => [:index]
  def index
    @aerations = @scope.all
  end

  def edit
    @aeration = Aeration.find(params[:id])
  end

  def update
  end

  protected

  def determine_scope
    @scope = if params[:batch_id]
      Batch.find(params[:batch_id]).aerations
    else
      Batch
    end
  end


end
