:css
  body {
      background-color: #f5f5f5;
  }
.row
  .col-md-4
  .col-md-4
    .well
      %form.auth-form{:name => "loginForm"}
        %h2.auth-form-heading Please sign in
        %br/
        .alert.alert-warning{"ng-show" => "authReason"}
          {{authReason}}
        .alert.alert-error{"ng-show" => "authError"}
          {{authError}}
        %input.input-block-level{:autofocus => "", "ng-model" => "user.email", :placeholder => "Email address", :required => "", :type => "text"}/
        %input.input-block-level{"ng-model" => "user.password", :placeholder => "Password", :required => "", :type => "password"}/
        %label.checkbox
          %input{:type => "checkbox", :value => "remember-me"}/
          Remember me
        %br/
        %a.btn.btn-large.btn-primary{"ng-click" => "login(user)", "ng-disabled" => "loginForm.$invalid", :type => "submit"} Sign in
        %a.btn.btn-link{:href => "/users/register"} Register
