.batches_container.ui-sortable{"ng-model"=>"batches"}
  .batch_container.well.pull-left{"ng-repeat" => "batch in batches", :id => "{{batch.fermenter}}"}
    .batch_header.row
      .col-md-4
        &#35;{{batch.fermenter}}
      .col-md-8
        %span.details
          %a{href:"#", 'ng-click' => 'toggleModal(batch.id);'}
            details
    .flavor_container.row{style: 'background-color:{{batch.flavor.color}};'}
      .col-md-6
        %h2
          {{batch.flavor.abv}}
      .col-md-6
        %span.days
          %b
            {{batch.days_ago}}
        %span
          %b
            days
    .row
      %br
      .col-md-12
        %span
          br:
          %b {{batch.last_brix}}
          , ph:
          %b {{batch.last_ph}}