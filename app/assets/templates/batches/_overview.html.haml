.overview-container{'ng-controller' => "OverviewsCtrl"}
  %br
  .row
    .col-md-12
      %form{:role => "form"}
        .row
          .col-md-3.text-right
            %span.overview-label
              fermenter:
          .col-md-6
            %h3
              %b
                &#35;{{selected_batch.fermenter.id}}
          .col-md-3
            .btn-group.overview-actions
              %button.btn.btn-sm.btn-primary.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :type => "button"}
                %span
                  actions
                %span.caret
              %ul.dropdown-menu{:role => "menu"}
                %li.text-center
                  %a Dump
                %li.text-center
                  %a Delete

        .row
          .col-md-3.text-right
            %span.overview-label
              flavor:
          .col-md-9.toggle-container
            .show-toggle
              %h3
                %b
                  {{selected_batch.flavor.name}}
                %a
                  %span.glyphicon.glyphicon-pencil.toggle-edit.actions
            .edit-toggle{:style => 'display:none;'}
              %select.edit_flavor{"ng-model"=>"flavor_id", 'ng-options'=>'flavor.id as flavor.name for flavor in flavors'}
              %a{style:"position:relative;top:5px;"}
                %span.glyphicon.glyphicon-ok-circle.toggle-edit.submit-edit{'ng-click'=>'updateFlavor()'}
        .row
          .col-md-3.text-right
            %span.overview-label
              brew date:
          .col-md-9.toggle-container
            .show-toggle
              %h3
                %b
                  {{selected_batch.brew_date}}
                %a
                  %span.glyphicon.glyphicon-pencil.toggle-edit.actions
            .edit-toggle{:style => 'display:none;'}
              %input.form-control.edit_brew_date{:placeholder => "brew_date", "ng-model"=>"selected_batch.brew_date"}
              %a
                %span.glyphicon.glyphicon-ok-circle.toggle-edit.submit-edit{'ng-click'=>'updateBrewDate()'}
  .row
    %hr.styled

    .col-md-3.text-right
      %span.overview-label
        recipe:

