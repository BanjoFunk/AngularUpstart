.inventories-container{'ng-controller' => 'InventoriesCtrl'}
  %br
  .row
    .col-md-12
      %table.table.inventory-table.fade-in
        %tbody
          %tr{'ng-repeat' => 'inventory in selected_batch.inventories'}
            %td
              .inventory-img-container
                %img{'src'=>'{{inventory.package_img}}'}
            %td.text-left
              .show-package
                %h1
                  {{inventory.quantity}} {{inventory.package_name}}s
              .edit-package{style: 'display:none;'}
                %input.form-control.edit_package{placeholder: 'quantity', 'ng-model'=>'inventory.quantity'}
            %td
              .edit-actions
                .show-package{'ng-if' => 'canCan("manage", "Batchpackage")'}
                  %a{href: '#', 'ng-click'=>'increaseQty(inventory)'}
                    %span.glyphicon.glyphicon-chevron-up
                  %a{href: '#', 'ng-click'=>'increaseQty(inventory)'}
                    %button.btn.btn-primary.btn-sm{type: 'button'} edit
                  %a{href: '#', 'ng-click'=>'increaseQty(inventory)'}
                    %span.glyphicon.glyphicon-chevron-down


                .edit-package{style: 'display:none;'}
                  %a.toggle-edit{'ng-click'=>'editPackage(inventory)'}
                    %span.glyphicon.glyphicon-ok-circle